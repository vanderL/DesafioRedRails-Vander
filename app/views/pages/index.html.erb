<% if !user_signed_in?  %>
     <style>
         body {
             background: linear-gradient( 
                 rgba(0,0,0, 0.7),
                 rgba(0,0,0, 0.7)
                 ), url("/bg.jpg") no-repeat center fixed
             
             ; 
             -webkit-background-size: cover;
             -moz-background-size: cover; 
             -o-background-size: cover;
             background-size: cover;
         }
         h1 {
             color: white;
             font-weight: bold;
         }


     </style>
     
     <div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <div class="row">
      <div id="landing-content" class="col-lg-9">
       <h1>Welcome to Twitterz.</h1>
        <p class="text">
                Developed for the redrocket challenge<br>
                Share your main features of twitter. <br>
                Simple twitter clone! <%= link_to "EXPLORE", explore_path, class: "text text-explore" %>
             </p>
        <p class="text">
          Checkout the Source code on <a href="https://github.com/vanderL/DesafioRedRails-Vander">Github</a>
        </p>
      </div>
      <div class="col-lg-3">
        <div class="row">
          <div class="well">
            <%= render "devise/sessions/form" %>
            <%= link_to "Forgot your password?", new_password_path(:user) %>
          </div>
        </div>
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Create an Account</h3>
            </div>
            <div class="panel-body">
              <%= render "devise/registrations/form" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 <% else  %>
 
<script>document.location = "/home"</script> 
 
 <% end %>