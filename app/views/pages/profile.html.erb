<div class="row">
     <div class="col-xs-3">
         <div class="col-sm-12" style="margin-top: -200px;">
              <img src="/avatar.png" height="200px" width="200px" class="rounded-img">
        </div>
        <div class="col-sm-12">
            <h3 style="font-weight: bold;"><%= User.find(params[:id]).email %></h3>
            <p>
               Desenvolvedor sem caminho, aprendendo uma pouco de tudo, mas com foco na web! <a href="https://github.com/vanderL">https://github.com/vanderL</a>
          </p>
        </div>
     </div>
     <div class="col-xs-6">
         <%= render '/twitters/post_form' %><br><br>
         <% for @p in @posts %>
              <div class="panel panel-default post-panel">
                <div class="panel-body row">
                  
                  <div class="col-sm-1">
                    <img src="/avatar.png" class="rounded-img" height="50px" width="50px"></img>
                  </div>
                  <div class="col-sm-11">
                    <p class="post-title">
                        <span class="post-owner">
                            <a href="/user/<%= @p.user_id %>">
                                <%= User.find(@p.user_id).email %>
                            </a>
                        </span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
                    <p class="post-content"><%= @p.content %></p>
                  </div>
                  
                  <div class="col-sm-12">
                    <p class="post-links">
                      <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                      <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                      <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                      <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                      <a href="">View conversation</a>
                    </p>
                  </div>
                  
                </div>
            </div>
        <% end %>
     </div>
     <div class="col-xs-3">
         <%= render '/twitters/follow_button', :user => User.find_by_id(params[:id]) %>
         <div class="panel panel-default">
             <div class="panel-body">
                <h5 style="color: grey; font-size: 125%;">Who to follow</h5>
                   <% for @u in @toFollow do %>
                     <p style="font-weight: bold; opacity: 0.85;" ><a href="/user/<%= @u.id %>"><%= @u.email %></a></p>
                   <% end %>
             </div>
         </div>
         <div class="panel panel-default">
             <div class="panel-body">
                <h5 style="color: grey; font-size: 125%;">Trends</h5>
                    <a href="">#CloneDoTwitter #1</a><br>
                        <span style="color: grey;">31k Posts</span><br><br>
                    <a href="">#RailsWithAngular2</a><br>
                        <span style="color: grey;">25k Posts</span><br><br>
                    <a href="">#Android</a><br>
                        <span style="color: grey;">16k Posts</span><br><br>
            </div>
         </div>
     </div>
 </div>
